class Player:
    def __init__(self, name: str, initial_stack: int):
        self.name = name
        self.hand = []
        self.stack = initial_stack
        self.current_bet = 0
        self.folded = False
        self.all_in = False

    def bet(self, amount: int):
        if amount > self.stack:
            raise ValueError("Not enough chips to bet")
        self.stack -= amount
        self.current_bet += amount
        return amount

    def receive_card(self, card):
        self.hand = card

    def clear_hand(self):
        self.hand = []
        self.current_bet = 0
        self.folded = False
        self.all_in = False

